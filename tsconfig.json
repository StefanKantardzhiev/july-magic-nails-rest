{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "target":"esnext",
        "module": "commonjs",
        "lib":["esnext","dom"],
        "esModuleInterop": true,
        "rootDir": "src/",
        "outDir": "build",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "resolveJsonModule": true
    }
}